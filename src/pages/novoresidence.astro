---
import { mainNavigationItems } from "@components/navigation/definitions";
import Carousel from "../components/carousel";
import novoResidence from "@images/pht-03.png";
import test1 from "@images/pht-04.png";
import test2 from "@images/pht-05.png";
import test3 from "@images/pht-08.png";
import test4 from "@images/pht-07.png";
import test5 from "@images/pht-08.png";
import test6 from "@images/pht-09.png";
import leftArrow from "@icons/ico-arrow-left.svg";
import rightArrow from "@icons/ico-arrow-right.svg";
import Layout from "@layouts/Layout.astro";
import { Image, getImage } from "astro:assets";

const optimizedBackground1 = await getImage({
  src: novoResidence,
  format: "webp"
});
const optimizedBackground2 = await getImage({ src: test1, format: "webp" });
const optimizedBackground3 = await getImage({ src: test2, format: "webp" });
const optimizedBackground4 = await getImage({ src: test3, format: "webp" });
const optimizedBackground5 = await getImage({ src: test4, format: "webp" });
const optimizedBackground6 = await getImage({ src: test5, format: "webp" });
const optimizedBackground7 = await getImage({ src: test6, format: "webp" });
const optimizedLeftArrow = await getImage({ src: leftArrow, format: "webp" });
const optimizedRightArrow = await getImage({ src: rightArrow, format: "webp" });
---

<Layout
  title="Dreams Incorporadora"
  items={mainNavigationItems}
  logoNavigation="/"
  description="O Novo Residence é a escolha certa para quem quer protagonizar os melhores momentos de sua vida."
>
  <header
    class="relative flex items-center justify-start h-dynamic bg-100 px-3 bg-gradient-to-b from-black-100 to-transparent"
  >
    <div class="max-w-7/10 z-40" transition:name="Novo Residence">
      <h2
        class="text-start uppercase font-bold text-2xl text-white tablet:text-lg tablet:pl-32"
      >
        <span class="block">Novo</span>
        <span class="block">Residence</span>
      </h2>
    </div>
    <Image
      src={novoResidence}
      alt="Imagem de casa com duas garagens."
      class="absolute inset-0 w-full h-full object-cover z-[-1]"
    />
  </header>

  <main>
    <section
      class="desktop:target:scroll-m-0 target:scroll-m-28 pt-12 desktop:pt-32 max-w-8/10 mx-auto"
      id="about"
    >
      <h2 class="text-orange-300 text-5xl text-center font-bold pb-20">
        O protagonista é você!
      </h2>
      <p class="text-2xl mb-9">
        O Novo Residence é a escolha certa para quem quer protagonizar os
        melhores momentos de sua vida.
      </p>
      <p class="text-2xl">
        Sinta o glamour, elegância e qualidade neste empreendimento de <strong
          >3 casas independentes</strong
        >, com espaços amplos e planejados situado em João Paulo, um dos bairros
        mais nobres de Florianópolis com alta segurança, tranquilidade e fácil
        acesso às praias e centro da cidade.
      </p>
    </section>

    <section class="py-12 desktop:py-32">
      <Carousel
        client:load
        slides={[
          { src: optimizedBackground1.src, name: "novoResidense" },
          { src: optimizedBackground2.src, name: "test1" },
          { src: optimizedBackground3.src, name: "test2" },
          { src: optimizedBackground4.src, name: "test3" },
          { src: optimizedBackground5.src, name: "test4" },
          { src: optimizedBackground6.src, name: "test5" },
          { src: optimizedBackground7.src, name: "test6" }
        ]}
        rightArrow={optimizedRightArrow.src}
        leftArrow={optimizedLeftArrow.src}
        id="gallery"
      />
    </section>

    <section class="py-12 desktop:py-32">
      <Carousel
        client:load
        slides={[
          { src: optimizedBackground1.src, name: "novoResidense" },
          { src: optimizedBackground2.src, name: "test1" },
          { src: optimizedBackground3.src, name: "test2" },
          { src: optimizedBackground4.src, name: "test3" },
          { src: optimizedBackground5.src, name: "test4" },
          { src: optimizedBackground6.src, name: "test5" },
          { src: optimizedBackground7.src, name: "test6" }
        ]}
        rightArrow={optimizedRightArrow.src}
        leftArrow={optimizedLeftArrow.src}
        id="plants"
      />
    </section>
  </main>
</Layout>
