---
import { projectNavitagionItems } from "@components/navigation/definitions";
import Plants from "@components/plants/plants.astro";
import Value from "@components/value";
import { NOVO_RESIDENCE_DEFINITIONS } from "@components/value/definitions";
import slideImage1 from "@images/pht-12.png";
import slideImage2 from "@images/pht-14.png";
import slideImage3 from "@images/pht-05.png";
import slideImage4 from "@images/pht-03.png";
import slideImage5 from "@images/pht-35.png";
import slideImage6 from "@images/JanduiCasas5.png";
import slideImage7 from "@images/pht-23.png";
import slideImage8 from "@images/pht-24.png";
import slideImage9 from "@images/pht-25.png";
import slideImage10 from "@images/pht-26.png";
import plantSlide1 from "@images/JanduiPlantaInferiorCasa1.png";
import plantSlide2 from "@images/JanduiPlantaSuperiorCasa1.png";
import plantSlide3 from "@images/JanduiPlantaInferiorCasa2.png";
import plantSlide4 from "@images/JanduiPlantaSuperiorCasa2.png";
import plantSlide5 from "@images/JanduiPlantaInferiorCasa3.png";
import plantSlide6 from "@images/JanduiPlantaSuperiorCasa3.png";
import Layout from "@layouts/Layout.astro";
import { Image, getImage } from "astro:assets";
import Carousel from "../components/carousel";

const optimizedBackground1 = await getImage({
  src: slideImage1,
  format: "webp"
});
const optimizedBackground2 = await getImage({
  src: slideImage2,
  format: "webp"
});
const optimizedBackground3 = await getImage({
  src: slideImage3,
  format: "webp"
});
const optimizedBackground4 = await getImage({
  src: slideImage4,
  format: "webp"
});
const optimizedBackground5 = await getImage({
  src: slideImage5,
  format: "webp"
});
const optimizedBackground6 = await getImage({
  src: slideImage6,
  format: "webp"
});
const optimizedBackground7 = await getImage({
  src: slideImage7,
  format: "webp"
});
const optimizedBackground8 = await getImage({
  src: slideImage8,
  format: "webp"
});
const optimizedBackground9 = await getImage({
  src: slideImage9,
  format: "webp"
});
const optimizedBackground10 = await getImage({
  src: slideImage10,
  format: "webp"
});
const optimizedPlantSlide1 = await getImage({
  src: plantSlide1,
  format: "webp"
});
const optimizedPlantSlide2 = await getImage({
  src: plantSlide2,
  format: "webp"
});
const optimizedPlantSlide3 = await getImage({
  src: plantSlide3,
  format: "webp"
});
const optimizedPlantSlide4 = await getImage({
  src: plantSlide4,
  format: "webp"
});
const optimizedPlantSlide5 = await getImage({
  src: plantSlide5,
  format: "webp"
});
const optimizedPlantSlide6 = await getImage({
  src: plantSlide6,
  format: "webp"
});
---

<Layout
  title="Dreams Incorporadora"
  items={projectNavitagionItems}
  logoNavigation="/"
  description="O Novo Residence é a escolha certa para quem quer protagonizar os melhores momentos de sua vida."
>
  <header
    class="relative flex items-center justify-start h-dynamic bg-100 px-3 bg-gradient-to-b from-black-100 to-transparent"
  >
    <div class="max-w-7/10 z-40" transition:name="Novo Residence">
      <h2
        class="text-start uppercase font-bold text-2xl text-white tablet:text-lg tablet:pl-32"
      >
        <span class="block">Novo</span>
        <span class="block">Residence</span>
      </h2>
    </div>
    <Image
      src={slideImage1}
      alt="Imagem de casa com duas garagens."
      class="absolute inset-0 w-full h-full object-cover z-[-1]"
    />
  </header>

  <main>
    <section
      class="desktop:target:scroll-m-0 target:scroll-m-28 pt-12 desktop:pt-32 max-w-8/10 mx-auto"
      id="about"
    >
      <h2
        class="text-orange-300 text-2xl tablet:text-5xl text-center font-bold pb-8 tablet:pb-20 uppercase"
      >
        O protagonista é você!
      </h2>
      <p class="text-base tablet:text-2xl mb-9">
        O Novo Residence é a escolha certa para quem quer protagonizar os
        melhores momentos de sua vida.
      </p>
      <p class="text-base tablet:text-2xl">
        Sinta o glamour, elegância e qualidade neste empreendimento de <strong
          >3 casas independentes</strong
        >, com espaços amplos e planejados situado em João Paulo, um dos bairros
        mais nobres de Florianópolis com alta segurança, tranquilidade e fácil
        acesso às praias e centro da cidade.
      </p>
    </section>

    <section class="py-12 desktop:py-32">
      <Carousel
        client:load
        slides={[
          { src: optimizedBackground1.src, name: "slide image 1" },
          { src: optimizedBackground2.src, name: "slide image 2" },
          { src: optimizedBackground3.src, name: "slide image 3" },
          { src: optimizedBackground4.src, name: "slide image 4" },
          { src: optimizedBackground5.src, name: "slide image 5" },
          { src: optimizedBackground6.src, name: "slide image 6" },
          { src: optimizedBackground7.src, name: "slide image 7" },
          { src: optimizedBackground8.src, name: "slide image 8" },
          { src: optimizedBackground9.src, name: "slide image 9" },
          { src: optimizedBackground10.src, name: "slide image 10" }
        ]}
        id="gallery"
      />
      <div
        class="grid grid-cols-2 pt-12 justify-items-center tablet:grid-cols-4 gap-6 max-w-8/10 mx-auto tablet:pt-16 tablet:mt-24 tablet:gap-16"
      >
        {
          NOVO_RESIDENCE_DEFINITIONS.map(value => (
            <Value client:load icon={value.icon} label={value.label} />
          ))
        }
      </div>
    </section>

    <section class="py-12 mb-32 bg-black-300 desktop:py-32 overflow-hidden">
      <Plants
        slides={[
          {
            src: optimizedPlantSlide1.src,
            name: "Planta Inferior Casa 1"
          },
          {
            src: optimizedPlantSlide2.src,
            name: "Planta Superior Casa 1"
          },
          {
            src: optimizedPlantSlide3.src,
            name: "Planta Inferior Casa 2"
          },
          {
            src: optimizedPlantSlide4.src,
            name: "Planta Superior Casa 2"
          },
          {
            src: optimizedPlantSlide5.src,
            name: "Planta Inferior Casa 3"
          },
          {
            src: optimizedPlantSlide6.src,
            name: "Planta Superior Casa 3"
          }
        ]}
        address="R. Dalil Salim Mansur, 20 - João Paulo, Florianópolis - SC, 88030-660"
      />
    </section>
  </main>
</Layout>
