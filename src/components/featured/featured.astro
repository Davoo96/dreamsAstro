---
interface FeaturedProps {
  title?: string;
  text: string;
}

const { text, title } = Astro.props as FeaturedProps;
---

<div
  data-animate-type="motion-safe:animate-fadeIn"
  class="my-12 px-12 py-9 border border-orange-300 max-w-8/10 mx-auto md:my-32 md:py-14 md:px-28 js-animation-on-scroll"
>
  <h3 class="font-bold text-base text-center text-orange-300 md:text-2xl">
    {title}
  </h3>
  <p class="text-base text-center md:text-2xl">{text}</p>
</div>
