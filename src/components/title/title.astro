---
type TitleProps = {
  text: string;
  dark: boolean;
  className?: string;
};

const { text, dark, className } = Astro.props as TitleProps;
---

<h1
  data-animate-type="motion-safe:animate-fadeLeft"
  class={`text-sm font-bold uppercase laptop:text-8xl ${
    dark
      ? "text-black-300 drop-shadow-hugeDark desktop:text-big text-md"
      : "text-white drop-shadow-huge text-lg desktop:text-huge"
  } ${className}`}
>
  {text}
</h1>
