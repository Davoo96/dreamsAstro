---
type TitleProps = {
  text: string;
  dark: boolean;
  className?: string;
  mediumFont?: boolean;
};

const { text, dark, className, mediumFont } = Astro.props as TitleProps;
---

<h1
  data-animate-type="motion-safe:animate-fadeLeft"
  class={`text-sm font-bold uppercase laptop:text-8xl ${
    dark
      ? "text-black-300 drop-shadow-hugeDark text-md"
      : "text-white drop-shadow-huge text-lg"
  } ${mediumFont ? "desktop:text-big" : "desktop:text-huge"} ${className}`}
>
  {text}
</h1>
